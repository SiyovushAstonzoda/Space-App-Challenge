@model Domain.Dtos.AddChallengeDto
<!-- Jumbotron -->
<div
    class="bg-image p-5 text-center shadow-1-strong rounded mb-5 text-white"
    style="background-image: url('https://mdbcdn.b-cdn.net/img/new/slides/003.webp');"
>
    <h1 class="mb-3 h2">Challenge</h1>
</div>
<!-- Jumbotron -->

<form method="post" asp-action="Add">
    <div class="form-group">
        <label>Challenge Name</label>
        <input asp-for="Name" type="text" class="form-control" placeholder="Enter challenge name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label>Challenge Description</label>
        <textarea asp-for="Description" class="form-control" placeholder="Enter challenge description"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>